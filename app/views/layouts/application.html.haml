!!! 5
%html(lang="en")
	%head
		%meta(charset="utf-8")
	%meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
	%meta(name="viewport" content="width=device-width, initial-scale=1.0")
	%title= content_for?(:title) ? yield(:title) : "BarcampGarden"
	= csrf_meta_tags
	/ Le HTML5 shim, for IE6-8 support of HTML elements
	/[if lt IE 9]
		= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
	= stylesheet_link_tag "application", :media => "all"
	%link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
	%link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
	%link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
	%link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
	%link(href="images/favicon.ico" rel="shortcut icon")


	%body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					%a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand(href="#") BarcampGarden
					.container.nav-collapse
						/
							%ul.nav
								%li= link_to "Link 1", "/path1"
								%li= link_to "Link 2", "/path2"
						%div.pull-right
							%p.navbar-text
								- if user_signed_in?
									Signed in as #{current_user.email}.
									= link_to "Sign out", "/users/sign_out", :method => :delete
								- else
									= link_to "Register", "/users/sign_up"
									or
									= link_to "Sign In", "/users/sign_in"

	#wrapper
		.container
			.content
				.row
					.span3
						.well.sidebar-nav
							%ul.nav.nav-list
								%li.nav-header Navigation
								%li= link_to "Home", root_url
								/ %li= link_to "Guest list", "/guestlist"
								%li= link_to "Schedule", "/schedule"
								%li= link_to "Media stream", "/mediastream"

						.well.sidebar-nav
							%ul.nav.nav-list
								%li.nav-header Special features
								%li= link_to "Documents", "#"
								%li= link_to "References", "#"

					.span9
						= bootstrap_flash
						= yield
		#pusher

	#footer.container
		%footer
			%p 
				Powered by
				%a(href="https://github.com/Gnuside/barcamp-garden") Barcamp Garden 
				&copy; 
				%a(href="http://www.gnuside.com") Gnuside 2012
				%br/
				%a(href="https://github.com/Gnuside/barcamp-garden") Barcamp Garden 
				is free software released under the GNU/AGPL.
	/
		Javascripts
		\==================================================
	/ Placed at the end of the document so the pages load faster
	= javascript_include_tag "application"

