= form_for([@event,@slot]) do |f|
  - if @slot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slot.errors.count, "error")} prohibited this slot from being saved:"
      %ul
        - @slot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dtstart
    = f.datetime_select :dtstart
  .field
    = f.label :dtend
    = f.datetime_select :dtend
  .actions
    = f.submit 'Save'
